<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hospital_appointment_view_form" model="ir.ui.view">
        <field name="model">hospital.appointment</field>
        <field name="name">hospital.appointment.form</field>
        <field name="arch" type="xml">
            <form string="Appointments">
                <sheet>
                    <group>
                        <group>
                            <field name="ref">ref-</field>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="date"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="room_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_doctor_view_form" model="ir.ui.view">
        <field name="model">hospital.appointment</field>
        <field name="name">hospital.appointment.tree</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="ref"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="room_id"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_appointment_view" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_hospital_appointment_root"
            name="Appointment"
            sequence="3"
            parent="menu_hospital_root"
            action="action_hospital_appointment_view"
    />

</odoo>